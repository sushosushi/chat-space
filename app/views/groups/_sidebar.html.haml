.side-bar
  .user
    %h3.user__name
      = current_user.name
    %ul.user__lists
      %li.list
        = link_to new_group_path do
          = fa_icon 'pencil-square-o', class: 'icon'
      %li.list
        = link_to edit_user_path(current_user) do
          = fa_icon 'cog', class: 'icon'

  .side-bar__groups
    - current_user.groups.each do |group|
      .side-bar__group
        = link_to groups_path(group), class: "side-bar__group-massage" do
          .side-bar__group-name
            = group.name
          .side-bar__group-message
            = group.show_last_message
